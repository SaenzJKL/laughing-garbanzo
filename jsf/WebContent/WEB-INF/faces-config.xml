<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    
    <managed-bean>
		<managed-bean-name>ContextBeans</managed-bean-name>
		<managed-bean-class>org.vert.context.ContextBeans</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>SessionContext</managed-bean-name>
		<managed-bean-class>org.vert.context.SessionContext</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>Catalogs</managed-bean-name>
		<managed-bean-class>org.vert.model.Catalogs</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>CLIENT</from-outcome>
			<to-view-id>/pages/client/home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>DRIVER</from-outcome>
			<to-view-id>/pages/driver/route.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
